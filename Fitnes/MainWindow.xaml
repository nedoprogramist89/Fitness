<Window x:Class="Fitnes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Fitnes"
        mc:Ignorable="d"
       Title="Авторизация" Height="470" Width="800" Background="#FFF8D6"  MinHeight="470" MinWidth="800">
    <Grid>
        <TextBlock Text="Авторизация" FontSize="28" Foreground="#D69E53" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,95,0,0"/>

        <TextBox x:Name="EmailTextBox" Width="300" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,155,0,0" FontSize="16" Background="White" BorderBrush="#D69E53" BorderThickness="2" materialDesign:HintAssist.Hint="Почта" Padding="5"/>

        <PasswordBox x:Name="PasswordBox" Width="300" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="16" Background="White" BorderBrush="#D69E53" BorderThickness="2" materialDesign:HintAssist.Hint="Пароль" Padding="5" />


        <Button Content="Войти" Height="40" Background="#FCC874" Foreground="#444444" FontSize="16" FontWeight="Bold" BorderThickness="0" Margin="251,272,404,122" Click="Auth"/>
        <Button Content="Выйти" Height="40" Background="#FCC874" Foreground="#444444" FontSize="16" FontWeight="Bold" BorderThickness="0" Margin="406,272,251,122" Click="Button_Click_1"/>
    </Grid>
</Window>
